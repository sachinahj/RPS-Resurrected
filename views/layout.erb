<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>RPS: Chuck up the Deuce Edition</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" text="text/css" href="/RPS.css">
        <link rel="stylesheet" text="text/css" href="/foundation.min.css">
    </head>
    <body class="background">
      
      <%= erb :_header %>

      <div class="row">
        <div class="gamebox small-11 medium-9 large-7 small-centered medium-centered large-centered columns">
          <%= yield %>
        </div>
      </div>
      
      <script type="text/javascript" src="/jquery-1.11.1.min.js"></script>
      <script type="text/javascript" src="/foundation.min.js"></script>
      <script>$(document).foundation();</script>
      <script type="text/javascript">
         $('input[type=text].email-builder').on('keyup', function() {
           var maillink = "mailto:realquick@hardinthepaint.com?subject=RPS%3A%20Chunk%20up%20the%20deuce%20edition!";
           var name = $('input[name=name].email-builder').val();
           var email = $('input[name=email].email-builder').val();
           var message = $('input[name=body].email-builder').val();

           name = "From%3A%20" + encodeURIComponent(name) + "%0D";
           email = "Email%3A%20" + encodeURIComponent(email) + "%0D%0D";
           message = encodeURIComponent(message);

           var addToMailLink = "&body=" + name + email + message;

           maillink = maillink + addToMailLink;
           $('.send-feedback-email').attr('href', maillink);
         });
        </script>

    </body>
</html>